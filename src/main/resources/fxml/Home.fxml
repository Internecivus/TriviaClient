<AnchorPane fx:id="mainPane" prefHeight="480.0" prefWidth="640.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.trivia.client.controller.HomeController">
   <children>
      <StackPane fx:id="stackPane" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <BorderPane prefHeight="200.0" prefWidth="200.0">
               <top>
                  <StackPane maxHeight="-Infinity" minHeight="-Infinity" prefHeight="200.0" prefWidth="640.0" BorderPane.alignment="CENTER">
                     <children>
                        <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" StackPane.alignment="BOTTOM_CENTER">
                           <image>
                              <Image url="@../icon.png" />
                           </image>
                        </ImageView>
                        <ComboBox fx:id="languageBox" prefWidth="120.0" StackPane.alignment="TOP_RIGHT">
                           <StackPane.margin>
                              <Insets right="15.0" top="15.0" />
                           </StackPane.margin>
                        </ComboBox>
                     </children>
                  </StackPane>
               </top>
               <center>
                  <GridPane alignment="CENTER" maxWidth="-Infinity" prefWidth="340.0" styleClass="boxLabel" BorderPane.alignment="CENTER">
                     <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
                     </columnConstraints>
                     <rowConstraints>
                        <RowConstraints maxHeight="-Infinity" minHeight="10.0" prefHeight="50.0" vgrow="SOMETIMES" />
                        <RowConstraints maxHeight="-Infinity" minHeight="-Infinity" prefHeight="50.0" vgrow="SOMETIMES" />
                        <RowConstraints maxHeight="-Infinity" minHeight="-Infinity" prefHeight="50.0" vgrow="SOMETIMES" />
                     </rowConstraints>
                     <children>
                      <Button mnemonicParsing="false" onAction="#exitApplication" text="Exit" GridPane.rowIndex="2" />
                        <Label alignment="TOP_CENTER" prefHeight="44.0" prefWidth="171.0" text="Trivia" GridPane.halignment="CENTER">
                           <font>
                              <Font size="36.0" />
                           </font>
                        </Label>
                        <Button mnemonicParsing="false" onAction="#startGame" text="New Game" GridPane.rowIndex="1" />
                     </children>
                     <BorderPane.margin>
                        <Insets left="120.0" right="120.0" />
                     </BorderPane.margin>
                  </GridPane>
               </center>
               <bottom>
                  <Pane prefHeight="90.0" prefWidth="200.0" BorderPane.alignment="CENTER" />
               </bottom>
            </BorderPane>
         </children>
      </StackPane>
   </children>
   <stylesheets>
      <URL value="@../css/bootstrap3.css" />
      <URL value="@../css/style.css" />
   </stylesheets>
